@page "{factoryId}"
@model Lambada.Generators.Pages.Factories.EditPageModel

@{
    var factoryName = Model.Factory.Name;
    ViewData["Title"] = "Edit factory " + factoryName;
}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-page="/Factories/Overview">Factories</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-page="/Factories/Details" asp-route-factoryId="@Model.Factory.FactoryId">@factoryName</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Editing factory @factoryName</li>
    </ol>
}

<h1>Editing factory @factoryName</h1>

<p class="text-success font-weight-bold text-xl-left">
    @Model.InfoText
</p>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-lg btn-danger float-right"
           asp-page="/Factories/Delete"
           asp-route-factoryId="@Model.Factory.FactoryId">
            <i class="far fa-trash-alt"></i> Delete Factory @factoryName
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mb-3">
        <form method="post">
            <div class="form-group">
                <label asp-for="Factory.Name">Enter name</label>
                <input type="text" class="form-control" asp-for="Factory.Name">
            </div>
            <div class="form-group">
                <label asp-for="Factory.Description">Enter description</label>
                <input type="text" class="form-control" asp-for="Factory.Description">
                <small id="DeviceIdHelp" class="form-text text-muted">you can use html chars as well</small>
            </div>
            <div class="form-group">
                <label asp-for="Factory.Latitude">Enter Latitude</label>
                <input type="text" class="form-control" asp-for="Factory.Latitude">
            </div>
            <div class="form-group">
                <label asp-for="Factory.Longitude">Enter Longitude</label>
                <input type="text" class="form-control" asp-for="Factory.Longitude">
            </div>
            <button type="submit" class="btn btn-primary">Update factory data</button>
        </form>
    </div>
</div>